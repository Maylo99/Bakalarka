<section class="Form my-4 mx-5 bg-dark  text-light text-center text-sm-start rounded">
  <div class="container ">
    <div class="row d-sm-flex align-items-center justify-content-between">
      <div class="col-lg-5 ">
        <div class="lead my-4">
          <%= image_tag("logo.png", class: 'img-fluid w-100 rounded d-none d-sm-block') %>
          <p>
            Ak si svoje heslo pamätáš prihlásiť sa môžes <%= link_to "TU!", sign_in_path, class: "link-danger" %>
          </p>
        </div>
      </div>
      <div class="col-lg-5">
        <%= form_with url: password_reset_path do |form| %>
          <form>
            <div class="form-row">
              <div class="col-lg-7">
                <h1>Zabudol si svoje heslo?</h1>
              </div>
            </div>
            <div class="form-row">
              <div class="col-lg-7">
                <%= form.label :email, "Email",class:"form-label"%>
                <%= form.text_field :email , class:"form-control"%>
              </div>
            </div>
            <div class="form-row">
              <div class="col-lg-7">
                <%= form.submit "Obnov heslo", class: "btn btn-danger"%>
        <% end %>
        </div>
        </div>
        <%= link_to "Zabudol si heslo?", password_reset_path, class: 'link-danger' %>
        </form>
      </div>
    </div>
  </div>
</section>
