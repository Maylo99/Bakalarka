<p style="color: green"><%= notice %></p>

<h1>Courses</h1>

<div id="courses">

  <%@courses.each do |course| %>
    <%= render course %>
    <p>
      <%= link_to "Show this courses", course %>
    </p>
  <% end %>
</div>
<%if policy(@courses).new? %>
  <%= link_to "New courses", new_course_path %>
<%end %>
