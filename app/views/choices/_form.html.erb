<%= form_with(model: choice) do |form| %>
  <% if choice.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(choice.errors.count, "error") %> prohibited this choice from being saved:</h2>

      <ul>
        <% choice.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :partialPoints, style: "display: block" %>
    <%= form.number_field :partialPoints %>
  </div>

  <div>
    <%= form.label :answer, style: "display: block" %>
    <%= form.text_field :answer %>
  </div>

  <div>
    <%= form.label :is_true, style: "display: block" %>
    <%= form.check_box :is_true %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
