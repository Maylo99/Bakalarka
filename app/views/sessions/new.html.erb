<section class="Form my-4 mx-5 bg-dark  text-light text-center text-sm-start rounded">
  <div class="container ">
    <div class="row d-sm-flex align-items-center justify-content-between">
      <div class="col-lg-5 ">
        <div class="lead my-4">
          <%= image_tag("logo.png", class: 'img-fluid w-100 rounded d-none d-sm-block') %>
          <p>
            Ak nie si registrovaný stačí pár klikov a budeš mať prístup k nadupaným kurzom!!
            Registračný formulár nájdeš  <%= link_to "TU!", sign_up_path, class: "link-danger" %>
          </p>
        </div>
      </div>
      <div class="col-lg-5">
        <%= form_with url: sign_in_path do |form| %>
          <form>
            <div class="form-row">
              <div class="col-lg-7">
                <h1>Prihlásenie</h1>
              </div>
            </div>
            <div class="form-row">
              <div class="col-lg-7">
                <%= form.label :email, "Email", class: "form-label" %>
                <%= form.text_field :email, class: "form-control" %>
              </div>
            </div>
            <div class="form-row">
              <div class="col-lg-7">
                <%= form.label :password, "Heslo", class: "form-label" %>
                <%= form.password_field :password, class: "form-control" %>
              </div>
            </div>
            <div class="form-row">
              <div class="col-lg-7">
                <%= form.submit "Login", class: "btn btn-danger" %>
        <% end %>
        </div>
        </div>
        <%#= link_to "Zabudol si heslo?", password_reset_path, class: 'link-danger' %>
        </form>
      </div>
    </div>
  </div>
</section>
